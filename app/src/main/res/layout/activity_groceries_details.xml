<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    tools:context="com.project.dayshedule.dayshedule.Groceries.GroceriesDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:background="@drawable/item_gradient_list">

        <TextView
            android:id="@+id/groceriesDetails_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nazwa Produktu"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/groceriesDetails_productCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategoria"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_below="@id/groceriesDetails_productName"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Szczegoly produktu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="60dp">

        <Button
            android:id="@+id/groceriesDetails_btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginRight="5dp"
            android:text="Edytuj"
            android:onClick="btnEdit"/>

        <Button
            android:id="@+id/groceriesDetails_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginLeft="5dp"
            android:text="Usuń"
            android:onClick="btnDelete"/>

    </LinearLayout>

    <Button
        android:id="@+id/groceriesDetails_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Powrót"
        android:onClick="btnBack"/>

</RelativeLayout>
