<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.dayshedule.dayshedule">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".DesktopActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".Groceries.GroceriesListActivity" />
        <activity android:name=".Dishes.DishesListActivity" />
        <activity android:name=".Groceries.GroceriesAddActivity" />
        <activity android:name=".Dishes.DishesAddActivity" />
        <activity android:name=".Groceries.GroceriesDetailsActivity" />
        <activity
            android:name=".Dishes.DishesDetailsActivity"
            android:label="@string/title_activity_dishes_details"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Dishes.DishesComponentAddActivity" />
        <activity android:name=".Groceries.GroceriesCategoryListActivity" />
        <activity android:name=".Groceries.GroceriesCategoryAddActivity" />
        <activity android:name=".Groceries.GroceriesCategorySelectListActivity"
            android:noHistory="true"></activity>
    </application>

</manifest>